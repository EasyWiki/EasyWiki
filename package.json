{
  "name": "easywiki",
  "version": "0.7.0",
  "description": "Simple wiki software for an easy wiki.",
  "main": "app/app.js",
  "scripts": {
    "start": "pm2 start --env production",
    "start-dev": "pm2 start",
    "start-node": "node app/app.js",

    "build": "tsc --build",
    "watch": "tsc --build --watch",
    "clean": "tsc --build --clean",

    "build-css": "node-sass -r -x sass/export -o public/css",
    "watch-css": "node-sass --watch -r -x sass/export -o public/css",

    "docker": "docker-compose up -d",
    "docker-build": "docker-compose build",
    "docker-dev": "docker-compose -f dev-docker-compose.yml up -d"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WatcherWhale/EasyWiki.git"
  },
  "keywords": [
    "wiki",
    "easywiki",
    "easy"
  ],
  "author": "EasyWiki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WatcherWhale/EasyWiki/issues"
  },
  "homepage": "https://github.com/WatcherWhale/EasyWiki#readme",
  "dependencies": {
    "cookie-parser": "^1.4.4",
    "express": "^4.17.1",
    "express-basic-auth": "^1.2.0",
    "jsdom": "^15.2.1",
    "kramed": "^0.5.6",
    "mustache": "^3.1.0",
    "node-cache": "^5.1.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.2",
    "@types/jsdom": "^12.2.4",
    "@types/mustache": "^0.8.32",
    "bulma": "^0.8.0",
    "bulma-extensions": "^6.2.7",
    "bulma-fluent": "^0.3.19",
    "bulmaswatch": "^0.7.5",
    "node-sass": "^4.13.0"
  }
}
