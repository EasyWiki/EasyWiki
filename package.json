{
  "name": "easywiki",
  "version": "1.0.2",
  "description": "Simple wiki software for an easy wiki.",
  "main": "app/app.js",
  "scripts": {
    "start": "pm2 start --env production",
    "start-dev": "pm2 start",
    "start-node": "node app/app.js",
    "build": "tsc --build",
    "watch": "tsc --build --watch",
    "clean": "tsc --build --clean",
    "minify": "node minifier/minify.js",
    "docker": "docker-compose up -d",
    "docker-build": "docker build -t easywiki/easywiki:latest .",
    "docker-dev": "docker-compose -f dev-docker-compose.yml up -d"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WatcherWhale/EasyWiki.git"
  },
  "keywords": [
    "wiki",
    "easywiki",
    "easy"
  ],
  "author": "EasyWiki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WatcherWhale/EasyWiki/issues"
  },
  "homepage": "https://github.com/WatcherWhale/EasyWiki#readme",
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "express-basic-auth": "^1.2.0",
    "jsdom": "^15.2.1",
    "kramed": "^0.5.6",
    "mustache": "^3.2.1",
    "node-cache": "^5.1.0"
  },
  "devDependencies": {
    "@node-minify/core": "^5.3.0",
    "@node-minify/uglify-es": "^5.3.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.6",
    "@types/jsdom": "^12.2.4",
    "@types/mustache": "^0.8.32"
  }
}
