{
  "name": "easywiki",
  "version": "0.0.1",
  "description": "The software that powers the EI-Wiki.",
  "main": "app/app.js",
  "scripts": {
    "start": "node app/app.js",
    "start-dev": "pm2-dev app/app.js",
    "build": "tsc --build",
    "watch": "tsc --build --watch",
    "clean": "tsc --build --clean",
    "build-css": "node-sass -r -x sass -o public/css",
    "build-all": "npm run build && npm run build-css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WatcherWhale/EasyWiki.git"
  },
  "keywords": [
    "wiki"
  ],
  "author": "Mathias Maes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WatcherWhale/EasyWiki/issues"
  },
  "homepage": "https://github.com/WatcherWhale/EasyWiki#readme",
  "dependencies": {
    "cookie-parser": "^1.4.4",
    "express": "^4.17.1",
    "highlight.js": "^9.16.2",
    "http-errors": "^1.7.3",
    "kramed": "^0.5.6",
    "mustache": "^3.1.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.2",
    "@types/highlight.js": "^9.12.3",
    "@types/http-errors": "^1.6.2",
    "@types/mustache": "^0.8.32",
    "bulma": "^0.8.0",
    "bulma-extensions": "^6.2.7",
    "bulmaswatch": "^0.7.5",
    "node-sass": "^4.13.0"
  }
}
